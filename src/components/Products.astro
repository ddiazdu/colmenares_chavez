<script>
    const numero = "+56950685606"; // tu número WhatsApp
    // Selecciona todos los botones de WhatsApp
    document.querySelectorAll(".btn-whatsapp").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            // Asegurarse de que e.target exista
            const target = e.target;
            if (!(target instanceof HTMLElement)) return;

            // Buscar la card contenedora
            const card = target.closest(".card-product");
            if (!card) return;

            // Obtener el nombre del producto de forma segura
            const nombreProductoEl = card.querySelector(".product-name");
            if (!(nombreProductoEl instanceof HTMLElement)) return;

            const nombreProducto = nombreProductoEl.innerText;
            if (!nombreProducto) return;

            // Generar el link de WhatsApp
            const mensaje = `Hola! Me interesa el producto ${nombreProducto} y quiero más información.`;
            const url = `https://wa.me/${numero}?text=${encodeURIComponent(mensaje)}`;

            // Abrir WhatsApp en una nueva pestaña
            window.open(url, "_blank");
        });
    });
</script>
